<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.layout.BorderPane?>


<BorderPane prefHeight="400.0" prefWidth="550.0" xmlns="http://javafx.com/javafx/9.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.MainController" fx:id="mainBorderPane">
   <top>
        <MenuBar BorderPane.alignment="CENTER">
            <menus>
                <Menu mnemonicParsing="false" text="File">
                    <items>
                        <MenuItem fx:id="mi_exit" mnemonicParsing="false" onAction="#exitAction" text="Close" />
                    </items>
                </Menu>
                <Menu mnemonicParsing="false" text="Action">
                    <items>
                        <MenuItem fx:id="mi_add" mnemonicParsing="false" onAction="#addEmployee" text="Add Employee" />
                        <MenuItem fx:id="mi_edit" mnemonicParsing="false" onAction="#editEmployee" text="Edit Data" />
                        <MenuItem fx:id="mi_delete" mnemonicParsing="false" onAction="#deleteEmployee" text="Delete Employee" />
                    </items>
                </Menu>
            </menus>
        </MenuBar>
   </top>
</BorderPane>
